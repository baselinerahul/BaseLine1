<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="base.line.android.baseline.Notification.Send_Notifaction">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Message text"/>
<EditText
    android:id="@+id/message_txt2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message label"/>
    <EditText
        android:id="@+id/tital_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/send_notifacation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send notifaction"/>

</LinearLayout>
